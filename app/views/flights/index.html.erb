<table>
  <tr>
    <th>Airline</th>
    <th>Flight Number</th>
    <th>Passengers</th>
  </tr>
  <% @flights.each do |flight| %>
    <tr id= "flight-<%=flight.id%>">
      <td>
        <p align = "center">
            <%= flight.airline.name %>
        </p>
      </td>
      <td>
        <p align = "center">
            <%= flight.name %>
        </p>
      </td>
      <td>
        <p align = "center">
            <% flight.passengers.each do |passenger| %>
            <div id="passenger-<%=passenger.id %>">
            <%= passenger.name %><br>
            <%= link_to "Remove Passenger", "/passengers/#{passenger.id}", method: :delete %>
            </div>
            <% end %>
        </p>
      </td>
    </tr>
      <% end %>
      </table>